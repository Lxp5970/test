<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE validators PUBLIC "-//Apache Struts//XWork Validator 1.0.3//EN"
        "http://struts.apache.org/dtds/xwork-validator-1.0.3.dtd">
<validators>
	<!-- 字段校验器 -->
	<field name="被校验的字段">
		<!-- 定义一个校验器 -->
		<field-validator type="校验器名称">
			<!-- 定义参数 -->
			<param name="参数名">参数值</param>
			... ...
			<!-- 定义校验失败后的提示信息 -->
			<message>提示信息</message>
			<!--<message key="提示信息key"/>-->
		</field-validator>
	</field>
	<!-- 定义非字段校验器 -->
	<validator type="校验器名称">
		<!-- 定义参数 -->
		<param name="参数名">参数值</param>
		... ...
		<!-- 定义校验失败后的提示信息 -->
		<message>提示信息</message>
		<!--<message key="提示信息key"/>-->
	</validator>
</validators>
